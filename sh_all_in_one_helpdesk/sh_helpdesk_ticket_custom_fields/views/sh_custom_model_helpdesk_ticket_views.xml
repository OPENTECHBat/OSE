                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_helpdesk_ticket_custom_fields_tree_view" model="ir.ui.view">
        <field name="name">sh.custom.models.helpdesk.ticket.list.view</field>
        <field name="model">sh.custom.model.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <list create="false">
                <field name="name" />
                <field name="field_description" string="Label" />
                <field name="field_type" string="Type" />
                <field name="ref_model_id" />
                <field name="required" />
                <field name="copied" />
            </list>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sh_action_helpdesk_ticket_custom_fields">
        <field name="name">Help Desk Custom Fields</field>
        <field name="res_model">sh.custom.model.helpdesk.ticket</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="sh_helpdesk_ticket_custom_fields_tree_view" />
        <field name="type">ir.actions.act_window</field>
    </record>

    <menuitem
        id="sh_helpdesk_ticket_custom_fields_menu"
        name="Helpdesk Ticket Custom Fields"
        parent="sh_all_in_one_helpdesk.helpdesk_config_menu"
        sequence="11"
        action="sh_action_helpdesk_ticket_custom_fields"
        groups="sh_all_in_one_helpdesk.group_helpdesk_ticket_custom_field"
    />
</odoo>
